<!-- Login page -->
<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card p-4 shadow-sm">
      <h3 class="mb-3">Login</h3>
      <!-- This form is progressively enhanced:
           - With JS: you can intercept submit and call /api/auth/login using fetch.
           - Without JS: it posts to /login and the server redirects to home. -->
      <form id="loginForm" method="POST" action="/login">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input name="email" id="email" class="form-control" type="email" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input name="password" id="password" class="form-control" type="password" required>
        </div>
        <button class="btn btn-primary w-100" type="submit">Login</button>
      </form>
      <p class="mt-3 mb-0">
        No account? <a href="/register">Register</a>
      </p>
    </div>
  </div>
</div>
