  <h2><%= book.title %></h2>
  <p><%= book.author %></p>
  <img src="<%= book.cover_url %>" class="img-fluid mb-3">

  <h4>Reviews</h4>
  <% if (reviews.length > 0) { %>
    <% reviews.forEach(r => { %>
      <div class="border p-2 mb-2">
        <strong><%= r.title %></strong> â€” <%= r.rating %>/5
        <p><%= r.body %></p>
      </div>
    <% }) %>
  <% } else { %>
    <p>No reviews yet.</p>
  <% } %>
</div>
