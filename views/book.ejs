<div class="container mt-4">
  <a href="/" class="btn btn-secondary mb-3">&larr; Back</a>

  <div class="row">
    <div class="col-md-4">
      <img src="<%= book.cover_url %>" class="img-fluid" alt="<%= book.title %>">
    </div>
    <div class="col-md-8">
      <h2><%= book.title %></h2>
      <p><em><%= book.author %></em></p>
      <% if (book.avg_rating) { %>
        <p><strong>Average Rating:</strong> <%= book.avg_rating %>/5</p>
      <% } %>
    </div>
  </div>

  <hr>
  <h4>Reviews</h4>
  <% if (reviews.length > 0) { %>
    <% reviews.forEach(r => { %>
      <div class="border p-2 mb-2">
        <strong><%= r.title %></strong> â€” <%= r.rating %>/5
        <p><%= r.body %></p>
      </div>
    <% }) %>
  <% } else { %>
    <p>No reviews yet.</p>
  <% } %>

  <% if (user) { %>
    <a href="/write/<%= book.id %>" class="btn btn-primary mt-3">Write a Review</a>
  <% } else { %>
    <p class="mt-3"><a href="/login">Login</a> to write a review.</p>
  <% } %>
</div>
